<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="track"
            type="com.example.simplemediaplayer.models.TrackData" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:cardCornerRadius="12dp"
        android:layout_gravity="center_horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivMiniSongPoster"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/gradient_circle_bg"
                app:civ_border_color="@color/white"
                app:civ_border_width="1.5dp"
                android:layout_marginStart="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/tvSongNamePL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:padding="10dp"
                android:textAlignment="gravity"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@{track.title}"
                android:textColor="@color/white"
                android:textColorHint="@color/black"
                android:textSize="17sp"
                android:maxLines="1"
                app:layout_constraintRight_toLeftOf="@id/tvDuration"
                app:layout_constraintLeft_toRightOf="@+id/ivMiniSongPoster"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvArtistNamePL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:textAlignment="gravity"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@{track.artists_names}"
                android:textColor="@color/white"
                android:textColorHint="@color/black"
                android:textSize="14sp"
                android:maxLines="1"
                app:layout_constraintRight_toLeftOf="@id/tvDuration"
                app:layout_constraintTop_toBottomOf="@+id/tvSongNamePL"
                app:layout_constraintLeft_toRightOf="@+id/ivMiniSongPoster"/>
            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="@{track.displayDuration}"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_gravity="end"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>